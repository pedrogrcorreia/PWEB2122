@model Ficha4.Models.UnidadeMonetaria

@{
    ViewData["Title"] = "Remover";
}

<h1>Remover</h1>

<h3>Tem a certeza que quer remover a unidade?</h3>
<div>
    <h4>Unidade Monetária</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Codigo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Codigo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ValorPorEuro)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ValorPorEuro)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Data)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Data)
