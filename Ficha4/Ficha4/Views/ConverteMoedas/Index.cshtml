@model Ficha4.Models.ConverteData

@{
    ViewData["Title"] = "Conversor";
}

<h2>Conversor</h2>

<h3>Inputs</h3>
<hr />
@*BLOCO DE DADOS*@
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UnidadeInicial" class="control-label"></label>
                @Html.DropDownListFor(model => model.UnidadeInicial, ViewBag.UnidadesMonetarias as List<SelectListItem>, new { @class = "form-control" })
                <span asp-validation-for="UnidadeInicial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UnidadeFinal" class="control-label"></label>
                @Html.DropDownListFor(model => model.UnidadeFinal, ViewBag.UnidadesMonetarias as List<SelectListItem>, new { @class = "form-control" })
                <span asp-validation-for="UnidadeFinal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValorInicial" class="control-label"></label>
                <input asp-for="ValorInicial" class="form-control" />
                <span asp-validation-for="ValorInicial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Converter" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<h3>Outputs</h3>
<hr />
@*BLOCO DE RESULTADOS*@
<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="ValorFinal" class="control-label"></label>
            <input asp-for="ValorFinal" class="form-control" readonly="readonly" />
            <span asp-validation-for="ValorFinal" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="TaxaCambio" class="control-label"></label>
            <input asp-for="TaxaCambio" class="form-control" readonly="readonly" />
            <span asp-validation-for="TaxaCambio" class="text-danger"></span>
        </div>
    </div>
</div>

<div>
    <a asp-controller="UnidadesMonetarias" asp-action="Index">Unidades Monetárias</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
