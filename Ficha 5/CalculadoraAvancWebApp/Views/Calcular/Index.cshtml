@model CalculadoraAvancWebApp.ViewModels.CalculadoraViewModels

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<h4>CalculadoraViewModels</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OpDir" class="control-label"></label>
                <input asp-for="OpDir" class="form-control" />
                <span asp-validation-for="OpDir" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OpEsq" class="control-label"></label>
                <input asp-for="OpEsq" class="form-control" />
                <span asp-validation-for="OpEsq" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NDigitos" class="control-label"></label>
                @Html.DropDownListFor(model => model.NDigitos, Model.Digitos, new { @class = "form-control"})
                <span asp-validation-for="NDigitos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input name="Operacao" type="submit" value="Adição" class="btn btn-primary" />
                <input name="Operacao" type="submit" value="Subtração" class="btn btn-primary" />
                <input name="Operacao" type="submit" value="Multiplicação" class="btn btn-primary" />
                <input name="Operacao" type="submit" value="Divisão" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Resultado" class="control-label"></label>
                <input asp-for="Resultado" class="form-control" readonly="readonly"/>
                <span asp-validation-for="Resultado" class="text-danger"></span>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
