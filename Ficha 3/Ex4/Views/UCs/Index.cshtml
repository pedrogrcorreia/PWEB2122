@model IEnumerable<Ex4.Models.UC>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-controller="UCs" asp-action="Create">Create New</a>
</p>
<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Semestre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ECTS)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Licenciatura)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Ramo)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Semestre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ECTS)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Licenciatura)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ramo)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new {  id=item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>
